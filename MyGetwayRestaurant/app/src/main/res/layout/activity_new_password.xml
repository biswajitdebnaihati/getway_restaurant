<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustResize">




        <LinearLayout
            android:id="@+id/act_bar"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/act_bar"
                >

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".1"/>
                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:src="@drawable/lock_key"
                    android:layout_weight=".2"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".1"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:textColor="#000"
                android:textSize="45sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"/>
            <TextView
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the new password and confirm password then your password will change !"/>
            <android.support.design.widget.TextInputLayout

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:outlineAmbientShadowColor="#4CAF50"
                app:boxBackgroundColor="#FF9800"
                app:boxStrokeColor="#673AB7"
                android:outlineSpotShadowColor="#A46AA8"
                android:layout_marginLeft="16dp"
                android:textColorHint="#757B80"
                android:layout_marginBottom="8dp">

                <EditText
                    android:singleLine="true"
                    android:inputType="textWebPassword"
                    android:id="@+id/pass"
                    android:imeOptions="flagNavigateNext"
                    android:hint="Password"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_key"
                    android:background="@drawable/user_id"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:outlineAmbientShadowColor="#4CAF50"
                app:boxBackgroundColor="#FF9800"
                app:boxStrokeColor="#673AB7"
                android:outlineSpotShadowColor="#A46AA8"
                android:layout_marginLeft="16dp"
                android:textColorHint="#757B80"
                android:layout_marginBottom="8dp">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/cpass"
                    android:imeOptions="actionSend"
                    android:textSize="23sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:inputType="textWebPassword"
                    android:textStyle="bold"
                    android:hint="Confirm Password"
                    android:drawableLeft="@drawable/ic_login_2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/password"/>
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/e4"
                    android:textColor="#F80707"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/e1"
                    android:textColor="#F80707"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Field can not be empty"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/e2"
                    android:textColor="#F80707"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Id Required"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/e3"
                    android:textColor="#F80707"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid Password Required"/>
            </LinearLayout>


            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/roundedcornersecond"
                android:gravity="center"
                android:text="SET PASSWORD"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>