<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/headericon_third"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign into your Account"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <android.support.design.widget.TextInputLayout

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:outlineAmbientShadowColor="#4CAF50"
                    app:boxBackgroundColor="#FF9800"
                    app:boxStrokeColor="#673AB7"
                    android:outlineSpotShadowColor="#A46AA8"
                    android:layout_marginLeft="16dp"
                    android:textColorHint="#757B80"
                    android:layout_marginBottom="8dp">

                    <EditText

                        android:inputType="number"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:id="@+id/input_email"
                        android:imeOptions="flagNavigateNext"
                        android:hint="Mobile No."
                        android:maxLines="1"
                        android:textColor="#000000"

                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:outlineAmbientShadowColor="#4CAF50"
                    app:boxBackgroundColor="#FF9800"
                    app:boxStrokeColor="#673AB7"
                    android:outlineSpotShadowColor="#A46AA8"
                    android:layout_marginLeft="16dp"
                    android:textColorHint="#757B80"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:inputType="textWebPassword"
                        android:singleLine="true"

                        android:id="@+id/input_password"
                        android:imeOptions="actionSend"
                        android:hint="Password"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_lock_open_black_24dp"
                        />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/link_forgot_password"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="Forgot your Password?"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btn_login"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:text="Login"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:background="@drawable/rectangle_button"
                        android:layout_width="200dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>