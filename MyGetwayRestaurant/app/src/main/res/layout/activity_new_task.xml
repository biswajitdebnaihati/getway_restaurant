<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityNewTask">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerView_new_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/holdform"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/border_second"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/close_pop_up"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:layout_width="10dp"
                android:layout_height="20dp"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Cancel request for "

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/cancel_details"
            android:gravity="top|left"
            android:layout_margin="20dp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
        <Button
            android:id="@+id/cancle_button_details"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_button"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="normal"
            android:text="Submit"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time_set"/>
    </LinearLayout>
</RelativeLayout>